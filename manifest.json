{
  "name": "Swiss Public Transport Departure",
  "version": "1.0",
  "description":
    "This extension alerts a user when a train, tram or bus departs from a station.",
  "icons": {"16": "16.png", "48": "48.png", "128": "128.png"},
  "permissions": [
    "notifications","storage"
  ],
  "options_page": "options.html",
  "background": { "scripts": ["utils.js", "thirdparty/jquery-3.2.1.min.js", "thirdparty/moment.js", "background.js"] },
  "manifest_version": 2,

  // crbug.com/134315
  "web_accessible_resources": [
    "48.png"
  ]
}
